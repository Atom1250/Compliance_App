# Copy this file to `.env` and set real secrets locally.

# API/runtime
COMPLIANCE_APP_DATABASE_URL=postgresql+psycopg://compliance:compliance@127.0.0.1:5432/compliance_app
COMPLIANCE_APP_RUNTIME_ENVIRONMENT=development
COMPLIANCE_APP_AUTH_API_KEYS=dev-key
COMPLIANCE_APP_AUTH_TENANT_KEYS=default:dev-key

# Local LLM (LM Studio default)
COMPLIANCE_APP_LLM_BASE_URL=http://127.0.0.1:1234
COMPLIANCE_APP_LLM_API_KEY=lm-studio
COMPLIANCE_APP_LLM_MODEL=ministral-3-8b-instruct-2512-mlx

# Tavily discovery
COMPLIANCE_APP_TAVILY_ENABLED=true
COMPLIANCE_APP_TAVILY_API_KEY=replace-with-tavily-api-key
COMPLIANCE_APP_TAVILY_MAX_RESULTS=8
COMPLIANCE_APP_TAVILY_TIMEOUT_SECONDS=20
COMPLIANCE_APP_TAVILY_DOWNLOAD_TIMEOUT_SECONDS=30
COMPLIANCE_APP_TAVILY_MAX_DOCUMENT_BYTES=50000000

# Regulatory research (NotebookLM MCP workflow-only integration)
COMPLIANCE_APP_FEATURE_REG_RESEARCH_ENABLED=false
COMPLIANCE_APP_FEATURE_NOTEBOOKLM_ENABLED=false
# Optional override. If unset, strict citations auto-enable in staging only.
# COMPLIANCE_APP_FEATURE_NOTEBOOKLM_STRICT_CITATIONS=true
COMPLIANCE_APP_FEATURE_NOTEBOOKLM_PERSIST_RESULTS=false
COMPLIANCE_APP_FEATURE_NOTEBOOKLM_FAIL_OPEN=false
COMPLIANCE_APP_NOTEBOOKLM_CACHE_TTL_DAYS=14
COMPLIANCE_APP_NOTEBOOKLM_CACHE_FAILURE_TTL_MINUTES=30

# OpenAI (for workflows/optional cloud integration)
OPENAI_API_KEY=replace-with-openai-api-key
COMPLIANCE_APP_OPENAI_BASE_URL=https://api.openai.com/v1
COMPLIANCE_APP_OPENAI_API_KEY=replace-with-openai-api-key
COMPLIANCE_APP_OPENAI_MODEL=gpt-4o-mini

# Frontend wiring
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8001
NEXT_PUBLIC_API_KEY=dev-key
NEXT_PUBLIC_TENANT_ID=default
